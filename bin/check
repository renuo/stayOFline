#!/bin/sh

zip -qr palujo.zip index.html main.js styles.css ./engine/

ZIP_SIZE=$(wc -c < palujo.zip | awk '{print $1}')
rm palujo.zip

PERCENTAGE=$(awk '{ print $1 * 100 / 13312 }' <<< $ZIP_SIZE)
echo "Your current zip size is: $ZIP_SIZE bytes. [$PERCENTAGE%]"

if [ "$ZIP_SIZE" -gt "13312" ];
then
  echo "File is larger than 13'312 bytes!"
  exit 1
fi

